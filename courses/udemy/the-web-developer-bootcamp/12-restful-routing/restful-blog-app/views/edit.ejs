<% include ./partials/header %>
  <div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Title</label>
        <input name="blog[title]" type="text" value="<%= blog.title %>">
      </div>
      <div class="field">
        <label>Image</label>
        <input name="blog[image]" type="text" value="<%= blog.image %>">
      </div>
      <div class="field">
        <label>Blog Content</label>
        <textarea name="blog[body]" required><%= blog.body %></textarea>
      </div>
      <input class="ui violet big basic button" type="submit">
    </form>
  </div>
<% include ./partials/footer %>